@model IEnumerable<Blog>


<div class="row">
    <div class="col-12 panel panel-default ">
        <div class="col-6">
        <h1>Blogs</h1>
         </div>
         <div class="col-6 float-right">
        <a asp-action="Create"><button class="btn btn-secondary">Add</button></a>
        </div>
    </div>
    <div class="panek-body cal-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd-gradeX">
                           <td>@item.Title</td>
                           <td>@Html.Raw(item.Description)</td>
                           <td><img src="~/Uploads/Blog/@(item.Image)"/></td>
                           <td>
                               <a asp-action="Update" asp-route-id ="@item.Id"><button class="btn btn-success">Update</button></a>
                               <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger">Delete</button></a>
                           </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

